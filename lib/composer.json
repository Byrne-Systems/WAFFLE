{
    "name": "WAFFLE",
    "description": "Default Configuration File for WAFFLE",
    "prefer-stable": true,
    "repositories": [{
        "type": "composer",
        "url": "https://packagist.org"
    },{
        "packagist": false
    }],
    "require-dev": {
        "phpunit/phpunit": "5.0.*",
        "johnkary/phpunit-speedtrap": "^1.0",
    },
    "autoload": {
        "psr-4": {
            "WAFFLE\\Framework\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WAFFLE\\Framework\\UnitTests\\": "tests/"
        }
    }
}
